<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@color/colorWhite"
    android:padding="10dp"
    tools:context="com.example.ashu.programmingpie.ErrorAndExceptions_Activity">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical">
  <Button
      android:id="@+id/btnExceptions"
      android:layout_marginTop="2dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="15sp"
      android:textColor="@color/colorWhite"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:background="@color/colorGreen"
      android:text="11.1 Exceptions" />
  <Button
      android:id="@+id/btnTryCatch"
      android:layout_marginTop="2dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="15sp"
      android:textColor="@color/colorWhite"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:background="@color/colorGreen"
      android:text="11.2 Try And Catch" />
  <Button
      android:id="@+id/btnCustomException"
      android:layout_marginTop="2dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="15sp"
      android:textColor="@color/colorWhite"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:background="@color/colorGreen"
      android:text="11.3 Custom Exception" />

 </LinearLayout>
</ScrollView>
