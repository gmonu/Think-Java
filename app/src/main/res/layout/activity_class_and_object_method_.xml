<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:padding="10dp"
    android:background="@color/colorWhite"
    tools:context="com.example.ashu.programmingpie.ClassAndObjectMethod_Activity">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
      <Button
          android:id="@+id/btnClasses"
          android:layout_marginTop="2dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="15sp"
          android:textColor="@color/colorWhite"
          style="@style/Widget.AppCompat.Button.Borderless"
          android:background="@color/colorGreen"
          android:text="6.1 Classes Basics" />
      <Button
          android:id="@+id/btnClass_Objects"
          android:layout_marginTop="2dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="15sp"
          android:textColor="@color/colorWhite"
          style="@style/Widget.AppCompat.Button.Borderless"
          android:background="@color/colorGreen"
          android:text="6.2 Class Objects" />
      <Button
          android:id="@+id/btnConstructors"
          android:layout_marginTop="2dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="15sp"
          android:textColor="@color/colorWhite"
          style="@style/Widget.AppCompat.Button.Borderless"
          android:background="@color/colorGreen"
          android:text="6.3 Constructors" />
      <Button
          android:id="@+id/btnMethodOverloading"
          android:layout_marginTop="2dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="15sp"
          android:textColor="@color/colorWhite"
          style="@style/Widget.AppCompat.Button.Borderless"
          android:background="@color/colorGreen"
          android:text="6.4 Method Overloading" />
      <Button
          android:id="@+id/btnMethodOverriding"
          android:layout_marginTop="2dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="15sp"
          android:textColor="@color/colorWhite"
          style="@style/Widget.AppCompat.Button.Borderless"
          android:background="@color/colorGreen"
          android:text="6.5 Method Overriding" />
      <Button
          android:id="@+id/btnStaticKeywords"
          android:layout_marginTop="2dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="15sp"
          android:textColor="@color/colorWhite"
          style="@style/Widget.AppCompat.Button.Borderless"
          android:background="@color/colorGreen"
          android:text="6.6 Static Keywords" />

      <Button
          android:id="@+id/btnInheritance"
          android:layout_marginTop="2dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="15sp"
          android:textColor="@color/colorWhite"
          style="@style/Widget.AppCompat.Button.Borderless"
          android:background="@color/colorGreen"
          android:text="6.7 Inheritance" />

      <Button
          android:id="@+id/btnTypesOfInheritance"
          android:layout_marginTop="2dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="15sp"
          android:textColor="@color/colorWhite"
          style="@style/Widget.AppCompat.Button.Borderless"
          android:background="@color/colorGreen"
          android:text="6.8 Types Of Inheritance" />
      <Button
          android:id="@+id/btnFinalKeyword"
          android:layout_marginTop="2dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="15sp"
          android:textColor="@color/colorWhite"
          style="@style/Widget.AppCompat.Button.Borderless"
          android:background="@color/colorGreen"
          android:text="6.9 Final Keyword" />

      <Button
          android:id="@+id/btnAbstraction"
          android:layout_marginTop="2dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="15sp"
          android:textColor="@color/colorWhite"
          style="@style/Widget.AppCompat.Button.Borderless"
          android:background="@color/colorGreen"
          android:text="6.10 Abstraction" />
  </LinearLayout>
</ScrollView>
