<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:padding="10dp"
    android:background="@color/colorWhite"
    tools:context="com.example.ashu.programmingpie.Package_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <Button
        android:id="@+id/btnPackageIntro"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@color/colorGreen"
        android:text="9.1 Introduction To Package" />
    <Button
        android:id="@+id/btnJavaAPI"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@color/colorGreen"
        android:text="9.2 Java API Package" />
    <Button
        android:id="@+id/btnSystemPackage"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/colorWhite"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:background="@color/colorGreen"
        android:text="9.3 System Package" />
    </LinearLayout>
</RelativeLayout>
