<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:padding="10dp"
    android:background="@color/colorWhite"
    tools:context="com.example.ashu.programmingpie.Operators_And_ExpressionActivity">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
      <Button
          android:id="@+id/btnOperators"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/colorWhite"
          android:textSize="15sp"
          android:layout_marginTop="2dp"
          style="@style/Widget.AppCompat.Button.Borderless"
          android:background="@color/colorGreen"
          android:text="4.1 Operators"/>


      <Button
          android:id="@+id/btnExpression"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/colorWhite"
          android:textSize="15sp"
          android:layout_marginTop="2dp"
          style="@style/Widget.AppCompat.Button.Borderless"
          android:background="@color/colorGreen"
          android:text="4.2 Expression"/>


      <Button
          android:id="@+id/btnopPrecedence"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/colorWhite"
          android:textSize="15sp"
          android:layout_marginTop="2dp"
          style="@style/Widget.AppCompat.Button.Borderless"
          android:background="@color/colorGreen"
          android:text="4.3 Operators Precedence"/>
      <Button
          android:id="@+id/btnKeywords"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textColor="@color/colorWhite"
          android:textSize="15sp"
          android:layout_marginTop="2dp"
          style="@style/Widget.AppCompat.Button.Borderless"
          android:background="@color/colorGreen"
          android:text="4.4 Java Keywords"/>


  </LinearLayout>
</ScrollView>
